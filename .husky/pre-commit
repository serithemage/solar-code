#!/usr/bin/env sh
echo "🔍 Running pre-commit checks..."

# Create cache directory if it doesn't exist
CACHE_DIR=".git/.cache"
mkdir -p "$CACHE_DIR"

# Lint check with caching
echo "🧹 Running ESLint with cache..."
npm run lint:ci > /dev/null 2>&1
if [ $? -ne 0 ]; then
  echo "❌ Linting failed. Please fix ESLint errors and warnings."
  echo "💡 Try running 'npm run lint:fix' to auto-fix some issues."
  exit 1
fi

# TypeScript type check
echo "🔧 Running TypeScript type check..."
npm run typecheck --silent
if [ $? -ne 0 ]; then
  echo "❌ TypeScript type check failed. Please fix type errors."
  exit 1
fi

# Mark successful completion in cache
echo "$(date +%s)" > "$CACHE_DIR/.pre-commit-success"
echo "$(git rev-parse HEAD)" > "$CACHE_DIR/.last-commit-hash"

echo "✅ Pre-commit checks passed! (Code quality: lint + typecheck)"
echo "💡 Run 'npm test' separately to check unit tests"