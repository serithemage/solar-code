#!/bin/sh
. "$(dirname "$0")/_/husky.sh"

echo "ğŸš€ Running pre-push checks (CI equivalent)..."

# 1. Formatter check (like CI)
echo "ğŸ“ Checking code formatting with Prettier..."
npx prettier --check .
if [ $? -ne 0 ]; then
  echo "âŒ Formatting check failed. Push aborted."
  echo "ğŸ’¡ Run 'npm run format' to fix formatting issues."
  exit 1
fi

# 2. Linter check
echo "ğŸ§¹ Running ESLint..."
npm run lint:ci --silent
if [ $? -ne 0 ]; then
  echo "âŒ Linting failed. Push aborted."
  echo "ğŸ’¡ Run 'npm run lint:fix' to auto-fix some issues."
  exit 1
fi

# 3. Build project
echo "ğŸ”¨ Building project..."
npm run build --silent
if [ $? -ne 0 ]; then
  echo "âŒ Build failed. Push aborted."
  echo "ğŸ’¡ Please fix build errors before pushing."
  exit 1
fi

# 4. TypeScript type check
echo "ğŸ”§ Running TypeScript type check..."
npm run typecheck --silent
if [ $? -ne 0 ]; then
  echo "âŒ TypeScript type check failed. Push aborted."
  echo "ğŸ’¡ Please fix type errors before pushing."
  exit 1
fi

# 5. Run tests (with CI mode for consistency)
echo "ğŸ§ª Running all tests..."
npm run test:ci --silent
if [ $? -ne 0 ]; then
  echo "âŒ Tests failed. Push aborted."
  echo "ğŸ’¡ Please fix failing tests before pushing."
  exit 1
fi

echo "âœ… All checks passed! (format + lint + build + typecheck + tests)"
echo "ğŸš€ Proceeding with push..."